<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExamenMvvm"
             x:Class="ExamenMvvm.MainPage"
             Title="Cálculo de Descuento">

    <VerticalStackLayout Padding="20">
       
        <Entry x:Name="Pro1" Placeholder="Producto 1" Keyboard="Numeric" Text="{Binding Pro1}" />
        <Entry x:Name="Pro2" Placeholder="Producto 2" Keyboard="Numeric" Text="{Binding Pro2}" />
        <Entry x:Name="Pro3" Placeholder="Producto 3" Keyboard="Numeric" Text="{Binding Pro3}" />

        
        <Label Text="Subtotal" />
        <Label Text="{Binding Subtotal}" />

        <Label Text="Descuento" />
        <Label Text="{Binding Descuento}" />

        <Label Text="Total a Pagar" />
        <Label Text="{Binding TotalPagar}" />

        
        <Button Text="Calcular el Descuento que aplica" Command="{Binding CalcCommand}" />
        <Button Text="Limpiar Campos" Command="{Binding LimpCommand}" />
    </VerticalStackLayout>
</ContentPage>
